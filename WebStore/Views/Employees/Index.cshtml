@model IEnumerable<WebStore.Models.Employee>

<div class="container">
    <h3>Сотрудники</h3>
    <hr />

    <p>
        <a asp-action="Create" class="btn btn-default">
            Создать 1
        </a>

        <a asp-action="Edit" class="btn btn-default">
            Создать 2
        </a>
    </p>

    @if (@Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Возраст</th>
                    <th>
                        Управление
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.LastName</td>
                        <td>@employee.FirstName</td>
                        <td>@employee.Patronymic</td>
                        <td>@employee.Age</td>
                        <td>
                            <a asp-controller="Employees"
                               asp-action="Details"
                               asp-route-id="@employee.Id">
                                <i class="fa fa-info"></i>
                            </a>
                            <span style="margin-left: 12px; margin-right: 12px">
                                |
                            </span>
                            <a asp-controller="Employees"
                               asp-action="Edit"
                               asp-route-id="@employee.Id">
                                Редактировать
                            </a>
                            <span style="margin-left: 12px; margin-right: 12px">
                                |
                            </span>
                            <a asp-controller="Employees"
                               asp-action="Delete"
                               asp-route-id="@employee.Id"
                               class="text-danger">
                                Удалить
                            </a>
                            <span style="margin-left: 12px; margin-right: 12px">
                                |
                            </span>
                            <form asp-action="DeleteConfirmed" asp-route-id="@employee.Id">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>
            Сотрудники не найдены
        </p>
    }

    <p>
        <a asp-controller="Home"
           asp-action="Index"
           class="btn btn-default">
            Домой
        </a>
    </p>
</div>