@using WebStore.Services.Interfaces
@inject IProductData ProductData
@{ 
    var products = ProductData
        .GetProducts()
        .Take(9)
        .Select(product => new ProductViewModel
        {
            Id = product.Id,
            Name = product.Name,
            Price = product.Price,
            ImageUrl = product.ImageUrl,
        });
}

<partial name="Partial/_Slider"/>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSidebar" />
            </div>

            <div class="col-sm-9 padding-right">

                <partial name="Partial/_Products" model="products"/>

                <partial name="Partial/_CategoryTab" />

                <partial name="Partial/_RecomendedItems" />

            </div>
        </div>
    </div>
</section>